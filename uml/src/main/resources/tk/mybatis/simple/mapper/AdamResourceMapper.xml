<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
					"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="tk.mybatis.simple.mapper.AdamResourceMapper">
	<cache/>
	<select id="selectAll" resultType="AdamResource">
		select * from adam_resource limit 1,5;
	</select>

	<select id="selectByAdamResource" resultType="AdamResource">
		select * from adam_resource
		<where>
			<if test="name != null">
				name = #{name}
			</if>
		</where>
	</select>
</mapper>